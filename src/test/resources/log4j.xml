<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender externalProgramName="CONSOLE" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param externalProgramName="ConversionPattern" value="%d %t %-5p [%c] %m%n"/>
        </layout>
    </appender>

    <logger externalProgramName="archetype.test.service">
        <level value="WARN"/>
    </logger>
    <logger externalProgramName="org.springframework.web">
        <level value="ERROR"/>
    </logger>

    <root>
        <priority value="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </root>

</log4j:configuration>